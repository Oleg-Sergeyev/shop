- products.each do |product|
  - if !@array_product.include?(product.id)
    .catalog-product
      = link_to "#{product.name} - #{product.price} руб.", edit_product_path(product), data: { turbolinks: false }, class: 'product-link', title: "#{product.specification}"
      = link_to ' Удалить', product_path(product), method: :delete, data: {confirm: "Удалить #{product.name} ? Вы уверены?",  turbolinks: false}, class: 'delete-link'
      - @array_product.push(product.id)   